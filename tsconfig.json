{
  "compilerOptions": {
    "target": "ES2018",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build/main",
    "declaration": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/"]
}
